@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}
<style>
    body, html { height: 100%; margin: 0; padding: 0; }
    .login-bg { background: url('/images/coffee-beans-2258839-960.jpg') center center no-repeat; background-attachment: fixed; background-size: cover; min-height: 100vh; width: 100vw; display: flex; align-items: center; justify-content: center; }
    .login-card { max-width: 400px; width: 100%; border-radius: 28px; box-shadow: 0 12px 40px rgba(44, 41, 92, 0.22); background: rgba(255,255,255,0.40); backdrop-filter: blur(24px); padding: 2.8rem 2.2rem 2.2rem 2.2rem; margin: 32px 0; border: 1.5px solid rgba(210,168,106,0.18); transition: box-shadow 0.2s; }
    .login-header { color: #0a4d4d; font-size: 2rem; font-weight: 800; letter-spacing: 1px; text-align: center; margin-bottom: 2rem; text-shadow: 0 2px 8px rgba(44,41,92,0.08); }
    .form-label { font-weight: 600; color: #2d295c; }
    .btn-primary { background: linear-gradient(90deg, #00796b 0%, #ff9800 100%); color: #fff; font-weight: 700; border-radius: 10px; border: none; font-size: 1.1rem; padding: 0.7rem 2.2rem; box-shadow: 0 2px 8px rgba(44, 41, 92, 0.08); }
    .btn-primary:hover, .btn-primary:focus { background: linear-gradient(90deg, #ff9800 0%, #00796b 100%); color: #fff; box-shadow: 0 4px 16px rgba(44,41,92,0.12); }
    .popup {
        display: block;
        position: relative;
        margin-bottom: 1rem;
        animation: fadeIn 0.5s;
    }
    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    .password-suggestion {
        font-size: 0.95rem;
        color: #00796b;
        margin-top: 12px;
        margin-bottom: 0.5rem;
        display: block;
    }
    .password-eye {
        position: absolute;
        right: 16px;
        top: 38px;
        cursor: pointer;
        z-index: 2;
        color: #00796b;
    }
    .position-relative { position: relative; }
</style>
<div class="login-bg">
    <div class="login-card">
        <div class="login-header">Change Password</div>
        @if (Model.ShowPopup && !string.IsNullOrEmpty(Model.StatusMessage)) {
            <div id="popupMessage" class="alert alert-info popup">@Model.StatusMessage</div>
            <script>
                setTimeout(function() {
                    var popup = document.getElementById('popupMessage');
                    if (popup) popup.style.display = 'none';
                    window.location.href = '/Profile';
                }, 3000);
            </script>
        }
        <form method="post" autocomplete="on">
            <div class="mb-3 position-relative">
                <label asp-for="Input.OldPassword" class="form-label"></label>
                <input asp-for="Input.OldPassword" class="form-control" type="password" autocomplete="current-password" id="oldPassword" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                <span class="password-eye" onclick="togglePassword('oldPassword', this)"><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" viewBox="0 0 16 16"><path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM8 13c-4.418 0-7.364-4.052-7.938-4.927a.5.5 0 0 1 0-.146C.636 7.052 3.582 3 8 3c4.418 0 7.364 4.052 7.938 4.927a.5.5 0 0 1 0 .146C15.364 10.948 12.418 15 8 15z"/><path d="M8 5a3 3 0 1 0 0 6 3 3 0 0 0 0-6z"/></svg></span>
            </div>
            <div class="mb-3 position-relative">
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <input asp-for="Input.NewPassword" class="form-control" type="password" autocomplete="new-password" id="newPassword" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                <div class="password-suggestion">Use at least 8 characters, including uppercase, lowercase, number, and symbol.</div>
                <span class="password-eye" onclick="togglePassword('newPassword', this)"><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" viewBox="0 0 16 16"><path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM8 13c-4.418 0-7.364-4.052-7.938-4.927a.5.5 0 0 1 0-.146C.636 7.052 3.582 3 8 3c4.418 0 7.364 4.052 7.938 4.927a.5.5 0 0 1 0 .146C15.364 10.948 12.418 15 8 15z"/><path d="M8 5a3 3 0 1 0 0 6 3 3 0 0 0 0-6z"/></svg></span>
            </div>
            <div class="mb-3 position-relative">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" id="confirmPassword" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <span class="password-eye" onclick="togglePassword('confirmPassword', this)"><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" viewBox="0 0 16 16"><path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM8 13c-4.418 0-7.364-4.052-7.938-4.927a.5.5 0 0 1 0-.146C.636 7.052 3.582 3 8 3c4.418 0 7.364 4.052 7.938 4.927a.5.5 0 0 1 0 .146C15.364 10.948 12.418 15 8 15z"/><path d="M8 5a3 3 0 1 0 0 6 3 3 0 0 0 0-6z"/></svg></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Change Password</button>
        </form>
        <script>
            function togglePassword(id, el) {
                var input = document.getElementById(id);
                if (input.type === "password") {
                    input.type = "text";
                    el.style.color = '#c62828';
                } else {
                    input.type = "password";
                    el.style.color = '#00796b';
                }
            }
        </script>
    </div>
</div>
