@page
@model ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Profile Info</h4>
                    <p><strong>Name:</strong> @Model.UserInfo.UserName</p>
                    <p><strong>Email:</strong> @Model.UserInfo.Email</p>
                    <p><strong>Phone:</strong> @Model.UserInfo.PhoneNumber</p>
                    <a class="btn btn-primary" asp-page="/EditProfile">Edit Profile</a>
                    <a class="btn btn-secondary" asp-page="/ChangePassword">Change Password</a>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Order History</h4>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Order #</th>
                                <th>Date</th>
                                <th>Total</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td>@order.Id</td>
                                    <td>@order.OrderPlaced.ToShortDateString()</td>
                                    <td>@order.OrderTotal.ToString("C")</td>
                                    <td>@order.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>