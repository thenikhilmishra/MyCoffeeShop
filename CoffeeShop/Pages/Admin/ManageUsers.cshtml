@page
@model CoffeeShop.Pages.Admin.ManageUsersModel
@{
    ViewData["Title"] = "Manage Users";
}
<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
    }
    .manage-users-bg {
        background: url('/images/coffee-beans-2258839-960.jpg') center center/cover no-repeat;
        min-height: 100vh;
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .manage-users-card {
        max-width: 1100px;
        width: 100%;
        border-radius: 28px;
        box-shadow: 0 12px 40px rgba(44, 41, 92, 0.22);
        background: rgba(255,255,255,0.40);
        backdrop-filter: blur(24px);
        padding: 2.8rem 2.2rem 2.2rem 2.2rem;
        margin: 32px 0;
        border: 1.5px solid rgba(210,168,106,0.18);
        transition: box-shadow 0.2s;
    }
    .manage-users-header {
        color: #b88a4a;
        font-size: 2.5rem;
        font-weight: 800;
        letter-spacing: 1px;
        text-align: center;
        margin-bottom: 2rem;
        text-shadow: 0 2px 8px rgba(44,41,92,0.08);
    }
    .table {
        background: rgba(255,255,255,0.7);
        border-radius: 12px;
        overflow: hidden;
    }
    .btn-edit-user {
        background: linear-gradient(90deg, #2d295c 0%, #34aeeb 100%);
        color: #fff;
        font-weight: 700;
        border-radius: 10px;
        border: none;
        transition: background 0.2s, box-shadow 0.2s;
        font-size: 1rem;
        padding: 0.4rem 1.2rem;
        margin-right: 0.5rem;
    }
    .btn-edit-user:hover, .btn-edit-user:focus {
        background: linear-gradient(90deg, #34aeeb 0%, #2d295c 100%);
        color: #fff;
        box-shadow: 0 4px 16px rgba(44,41,92,0.12);
    }
    .btn-delete-user {
        background: linear-gradient(90deg, #eb3477 0%, #f9a07a 100%);
        color: #fff;
        font-weight: 700;
        border-radius: 10px;
        border: none;
        transition: background 0.2s, box-shadow 0.2s;
        font-size: 1rem;
        padding: 0.4rem 1.2rem;
    }
    .btn-delete-user:hover, .btn-delete-user:focus {
        background: linear-gradient(90deg, #f9a07a 0%, #eb3477 100%);
        color: #fff;
        box-shadow: 0 4px 16px rgba(44,41,92,0.12);
    }
    @@media (max-width: 900px) {
        .manage-users-card { max-width: 98vw; margin: 16px auto; padding: 1.2rem 0.5rem; }
        .manage-users-header { font-size: 1.5rem; }
    }
</style>
<div class="manage-users-bg">
    <div class="manage-users-card">
        <div class="manage-users-header">Manage Users</div>
        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div id="statusMessage" class="alert alert-success alert-dismissible fade show text-center" role="alert">
                @Model.StatusMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Full Name</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.Address</td>
                        <td>
                            <a asp-page="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-edit-user">Edit</a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-delete-user" onclick="return confirm('Delete this user?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script>
        window.addEventListener('DOMContentLoaded', function () {
            setTimeout(function () {
                var msg = document.getElementById('statusMessage');
                if (msg) {
                    msg.style.transition = "opacity 0.5s";
                    msg.style.opacity = 0;
                    setTimeout(function () { msg.style.display = 'none'; }, 500);
                }
            }, 2500);
        });
    </script>
}
