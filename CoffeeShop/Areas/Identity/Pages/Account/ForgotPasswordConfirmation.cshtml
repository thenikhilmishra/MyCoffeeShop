@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}
<style>
    .logout-hero {
        background: url('/images/nathan-dumlao-nbjho6wmrww-unsplash-815x1223.jpg') center center/cover no-repeat;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .logout-overlay {
        background: rgba(255,255,255,0.92);
        padding: 2rem 2.5rem;
        border-radius: 1.25rem;
        box-shadow: 0 4px 24px rgba(0,0,0,0.10);
        max-width: 420px;
        width: 90%;
        border: 1px solid #e0e0e0;
        text-align: center;
    }

    .logout-btn {
        background-color: #d2a86a;
        color: #fff;
        font-weight: bold;
        border: none;
        transition: background 0.1s;
    }

        .logout-btn:hover,
        .logout-btn:focus {
            background-color: #b88a4a;
            color: #fff;
        }
</style>

<div class="logout-hero">
    <div class="logout-overlay">
        <h1 class="mb-3" style="font-weight:600;">@ViewData["Title"]</h1>
        <hr />
        <p>
            Please check your email to reset your password.
        </p>
        <a asp-page="/Index" class="w-100 btn btn-lg logout-btn shadow mt-3">Go back to home</a>
    </div>
</div>