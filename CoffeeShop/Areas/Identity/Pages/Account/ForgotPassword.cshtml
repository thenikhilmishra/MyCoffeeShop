@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    .logout-hero {
        background: url('/images/nathan-dumlao-nbjho6wmrww-unsplash-815x1223.jpg') center center/cover no-repeat;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .logout-overlay {
        background: rgba(255,255,255,0.92);
        padding: 2rem 2.5rem;
        border-radius: 1.25rem;
        box-shadow: 0 4px 24px rgba(0,0,0,0.10);
        max-width: 420px;
        width: 90%;
        border: 1px solid #e0e0e0;
        text-align: center;
    }

    .logout-btn {
        background-color: #d2a86a;
        color: #fff;
        font-weight: bold;
        border: none;
        transition: background 0.1s;
    }

        .logout-btn:hover,
        .logout-btn:focus {
            background-color: #b88a4a;
            color: #fff;
        }
</style>

<div class="logout-hero">
    <div class="logout-overlay">
        <h1 class="mb-3" style="font-weight:600;">@ViewData["Title"]</h1>
        <h2 class="mb-4" style="font-size:1.2rem; font-weight:400;">Enter your email.</h2>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg logout-btn shadow">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}